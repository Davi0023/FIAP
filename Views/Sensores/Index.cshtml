@model IEnumerable<SensoresModel>
<h1>Sensores</h1>

@if (!string.IsNullOrEmpty((String)TempData["mensagemSucesso"]))
{
    <div class="alert alert-success" role="alert">
        @TempData["mensagemSucesso"]
    </div>
}

<p>
    <!-- uso de TagHelpers para definir o Controller e a Action -->
    <a asp-controller="sensores" asp-action="Cadastro">Novo Sensor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Modelo</th>
            <th>Fabricante</th>
            <th>Oceano</th>
            <th>Local</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var sensor in Model)
        {
            <tr>
                <td>
                    <label>@sensor.id_sensor</label>
                </td>
                <td>
                    <label>@sensor.ds_modelo</label>
                </td>
                <td>
                    <label>@sensor.ds_fabricante</label>
                </td>
                <td>
                    <label>@sensor.nm_oceano</label>
                </td>
                <td>
                    <!-- asp-route-id é usado para informar o Id do Item selecionado. -->
                    <a asp-controller="sensores" asp-action="Edit" asp-route-id="@sensor.id_sensor">Editar</a>
                    <a asp-controller="sensores" asp-action="Detail" asp-route-id="@sensor.id_sensor">Consultar</a>
                    <a asp-controller="sensores" asp-action="Delete" asp-route-id="@sensor.id_sensor">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>