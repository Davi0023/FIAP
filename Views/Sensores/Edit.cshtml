@model Fiap.Web.Challenge.Models.SensoresModel

<h1>Edição de Sensores</h1>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Sensores">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_sensor" />
            <div class="form-group">
                <label asp-for="ds_modelo" class="control-label"></label>
                <input asp-for="ds_modelo" class="form-control" />
                <span asp-validation-for="ds_modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ds_fabricante" class="control-label"></label>
                <input asp-for="ds_fabricante" class="form-control" />
                <span asp-validation-for="ds_fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nm_oceano" class="control-label"></label>
                <input asp-for="nm_oceano" class="form-control" />
                <span asp-validation-for="nm_oceano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_local" class="control-label"></label>
                <select asp-for="id_local" asp-items="@ViewBag.Local" class="form-select" />
                    <option value="0">Selecione</option>
                </select>
                <span asp-validation-for="id_local" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
     </div>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>
            
